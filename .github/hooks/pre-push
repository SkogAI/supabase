#!/bin/bash
# Pre-push hook for worktree validation
#
# This hook prevents pushing code that fails CI checks.
# It runs the same tests that GitHub Actions will run.
#
# To install this hook:
#   cp .github/hooks/pre-push .git/hooks/pre-push
#   chmod +x .git/hooks/pre-push
#
# To bypass (use sparingly):
#   git push --no-verify

set -e

# Color output
# pre-push hook - Run CI checks before pushing
#
# This hook runs CI validation checks before allowing a push.
# To bypass this hook, use: git push --no-verify
#
# Installed via: .github/scripts/install-hooks.sh

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}════════════════════════════════════════════════════════════${NC}"
echo -e "${BLUE}Running pre-push validation${NC}"
echo -e "${BLUE}════════════════════════════════════════════════════════════${NC}"
echo ""

# Get the root directory of the repository
REPO_ROOT=$(git rev-parse --show-toplevel)

# Check if we're in a worktree
if git worktree list | grep -q "$(pwd)"; then
    echo -e "${YELLOW}Detected worktree environment${NC}"
fi

# Run CI checks
if [ -f "$REPO_ROOT/.github/scripts/ci-worktree.sh" ]; then
    if "$REPO_ROOT/.github/scripts/ci-worktree.sh" "$REPO_ROOT"; then
        echo ""
        echo -e "${GREEN}✓ Pre-push validation passed${NC}"
        echo -e "${GREEN}✓ Safe to push${NC}"
        exit 0
    else
        echo ""
        echo -e "${RED}✗ Pre-push validation failed${NC}"
        echo -e "${RED}✗ Push blocked${NC}"
        echo ""
        echo -e "${YELLOW}To fix:${NC}"
        echo -e "  1. Review the errors above"
        echo -e "  2. Fix the issues"
        echo -e "  3. Run: .github/scripts/ci-worktree.sh"
        echo -e "  4. Try pushing again"
        echo ""
        echo -e "${YELLOW}To bypass (not recommended):${NC}"
        echo -e "  git push --no-verify"
        exit 1
    fi
else
    echo -e "${YELLOW}⚠ CI validation script not found${NC}"
    echo -e "${YELLOW}⚠ Skipping pre-push checks${NC}"
    exit 0
fi
echo ""
echo -e "${BLUE}========================================${NC}"
echo -e "${BLUE}Running Pre-Push Validation Checks${NC}"
echo -e "${BLUE}========================================${NC}"
echo ""
echo -e "${YELLOW}ℹ${NC} Use 'git push --no-verify' to bypass these checks"
echo ""

# Find the root of the repository
GIT_ROOT=$(git rev-parse --show-toplevel)

# Check if ci-worktree.sh exists
CI_SCRIPT="$GIT_ROOT/.github/scripts/ci-worktree.sh"

if [ ! -f "$CI_SCRIPT" ]; then
    echo -e "${RED}✗${NC} CI script not found: $CI_SCRIPT"
    echo -e "${YELLOW}⚠${NC} Skipping validation checks"
    exit 0
fi

# Run the CI checks
if "$CI_SCRIPT"; then
    echo ""
    echo -e "${GREEN}✓${NC} Pre-push validation passed"
    echo -e "${GREEN}✓${NC} Proceeding with push..."
    echo ""
    exit 0
else
    echo ""
    echo -e "${RED}✗${NC} Pre-push validation failed"
    echo ""
    echo "Options:"
    echo "  1. Fix the issues above and try again"
    echo "  2. Use 'git push --no-verify' to skip checks (not recommended)"
    echo ""
    exit 1
fi
