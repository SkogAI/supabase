{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Operation Result",
  "description": "Standardized result object for script operations",
  "type": "object",
  "required": ["result"],
  "properties": {
    "result": {
      "type": "object",
      "required": ["success", "operation", "data", "error", "warnings", "metadata"],
      "properties": {
        "success": {
          "type": "boolean",
          "description": "Whether the operation succeeded"
        },
        "operation": {
          "type": "string",
          "description": "Name of the operation performed"
        },
        "data": {
          "description": "Operation-specific data (null on error)",
          "oneOf": [
            { "type": "object" },
            { "type": "array" },
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" },
            { "type": "null" }
          ]
        },
        "error": {
          "description": "Error details (null on success)",
          "oneOf": [
            {
              "type": "object",
              "required": ["message", "type"],
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Human-readable error message"
                },
                "type": {
                  "type": "string",
                  "enum": ["general", "network", "validation", "conflict", "permission", "not_found"],
                  "description": "Error type for programmatic handling"
                },
                "context": {
                  "type": "object",
                  "description": "Additional error context"
                }
              }
            },
            { "type": "null" }
          ]
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Non-fatal warnings"
        },
        "metadata": {
          "type": "object",
          "required": ["timestamp"],
          "properties": {
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "ISO 8601 timestamp of operation"
            },
            "duration": {
              "type": "number",
              "description": "Operation duration in seconds"
            }
          },
          "additionalProperties": true
        }
      }
    }
  }
}
