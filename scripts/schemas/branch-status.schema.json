{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/SkogAI/supabase/schemas/branch-status",
  "title": "Branch Status",
  "description": "Status and metadata for a git branch",
  "type": "object",
  "required": ["branch"],
  "properties": {
    "branch": {
      "type": "object",
      "required": ["name", "type", "status"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Branch name"
        },
        "type": {
          "type": "string",
          "description": "Branch type",
          "enum": ["claude", "feature", "bugfix", "hotfix", "release", "unknown"]
        },
        "issueNumber": {
          "type": ["string", "null"],
          "description": "Associated issue number (for claude/* branches)"
        },
        "timestamp": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Branch creation timestamp (parsed from claude/* branch names)"
        },
        "status": {
          "type": "object",
          "required": ["existsLocally", "existsRemotely", "isMerged", "hasConflicts"],
          "properties": {
            "existsLocally": {
              "type": "boolean",
              "description": "Whether branch exists in local repository"
            },
            "existsRemotely": {
              "type": "boolean",
              "description": "Whether branch exists on remote (origin)"
            },
            "isMerged": {
              "type": "boolean",
              "description": "Whether branch has been merged"
            },
            "hasConflicts": {
              "type": "boolean",
              "description": "Whether branch has merge conflicts"
            },
            "behindMain": {
              "type": "integer",
              "description": "Number of commits behind main branch"
            },
            "aheadOfMain": {
              "type": "integer",
              "description": "Number of commits ahead of main branch"
            }
          }
        },
        "associatedPR": {
          "oneOf": [
            {
              "type": "null",
              "description": "No associated PR"
            },
            {
              "type": "object",
              "required": ["number", "state", "url"],
              "properties": {
                "number": {
                  "type": "integer",
                  "description": "PR number"
                },
                "state": {
                  "type": "string",
                  "enum": ["OPEN", "CLOSED", "MERGED"],
                  "description": "PR state"
                },
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "PR URL"
                }
              }
            }
          ]
        }
      }
    }
  }
}
